<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - $FinCtrl$</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container-fluid my-2">
        <div class="row">
            <div class="col-1">
                <ul class="list-group">
                    <li class="list-group-item">
                        <a asp-controller="MainPage" asp-action="Index">Главная</a>                        
                    </li>
                    <li class="list-group-item">Платежи</li>
                    <li class="list-group-item">
                        <a asp-controller="PaymentSource" asp-action="Index">Источники платежей</a>
                    </li>
                    <li class="list-group-item">Категории</li>                
                </ul>
            </div>
            <div class="col">
                <main role="main" class="py-3">
                    @RenderBody()
                </main> 
            </div> 
        </div>    
    
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
